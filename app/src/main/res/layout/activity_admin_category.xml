<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book3" />

        <ImageView
            android:id="@+id/book2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book5" />

        <ImageView
            android:id="@+id/book3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book6" />

        <ImageView
            android:id="@+id/book4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book4" />

        <ImageView
            android:id="@+id/book6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book8" />

        <ImageView
            android:id="@+id/book7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book9" />

        <ImageView
            android:id="@+id/book8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book11" />

        <ImageView
            android:id="@+id/book10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book12" />

        <ImageView
            android:id="@+id/book11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book13" />

        <ImageView
            android:id="@+id/book12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book14" />
    </LinearLayout>

</RelativeLayout>
